<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="build-common" default="default">
  <import file="dependencies.xml" />

  <property name="build" location="build" />
  <property name="dist" location="dist" />
  <property name="test-output" location="test_output" />
  <property name="javac-source" value="1.6" />
  <property name="javac-target" value="1.6" />
  <property name="debuglevel" value="source,lines,vars" />

  <target name="default" depends="init, compile, jar" />

  <target name="dist">
    <antcall target="depend.${ant.project.name}"/>
  </target>

  <target name="init">
    <mkdir dir="${build}" />
    <mkdir dir="${dist}" />
    <mkdir dir="${test-output}" />
  </target>

  <target name="test">
    <echo message="No tests to run for ${ant.project.name}." />
  </target>

  <target name="jar">
    <echo message="No JAR to buid for ${ant.project.name}." />
  </target>

  <target name="clean">
    <delete dir="${build}" />
    <delete dir="${dist}" />
    <delete dir="${test-output}" />
  </target>
</project>
